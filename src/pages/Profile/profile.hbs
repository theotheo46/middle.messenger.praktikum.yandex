<form class="{{styles.container}} {{styles.container_profile_flex}} {{styles.profile_container_size}}">
    <div class="{{styles.profile_container__left}}">
        {{{ linkLeft }}}
    </div>
    <div class="{{styles.profile_container__right}}">
        <div class="{{styles.profile_container__image}}">
            <center>
                <span><img src="{{avatar}}" id="avatar_id" name="avatar" alt="Аватар"></span><span>{{display_name_label}}</span>
                {{#if isSave }}
                    <label for="avatar">Поменять аватар</label>
                    <input type="file" id="avatar_file_name_id" name="avatar_file_name" accept="image/png, image/jpeg">
                {{/if}}
            </center>
        </div>
        <div class="{{styles.profile_container__title}}">{{title}}</div>
            {{{ first_name }}} 
            <div class="{{styles.profile_container__hr}}"><hr></div>
            {{{ second_name }}}
            <div class="{{styles.profile_container__hr}}"><hr></div>
            {{{ login }}}
            <div class="{{styles.profile_container__hr}}"><hr></div>
            {{{ email }}}
            <div class="{{styles.profile_container__hr}}"><hr></div>
            {{{ display_name }}}
            <div class="{{styles.profile_container__hr}}"><hr></div>
            {{{ phone }}}
            <div class="{{styles.profile_container__hr}}"><hr></div>
            {{#if isSave }}
                <div><center>{{{buttonSave}}}</center></div>
            {{else}}
                <div>{{{ linkChangeData }}}</div>
                <div>{{{ linkChangePassword }}}</div>
                <div>{{{ linkToMessenger }}}</div>
                <div>{{{ buttonExit }}}</div>
            {{/if}}
    </div>
</from>
